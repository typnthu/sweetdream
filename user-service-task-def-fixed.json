{
    "containerDefinitions": [
        {
            "name": "sweetdream-user-service",
            "image": "409964509537.dkr.ecr.us-east-1.amazonaws.com/sweetdream-user-service:latest",
            "cpu": 0,
            "portMappings": [
                {
                    "containerPort": 3003,
                    "hostPort": 3003,
                    "protocol": "tcp"
                }
            ],
            "essential": true,
            "environment": [
                {
                    "name": "DATABASE_URL",
                    "value": "postgresql://sweetdream_user:sweetdream_password@sweetdream-db.csn0cigocj2w.us-east-1.rds.amazonaws.com:5432/sweetdream_db"
                },
                {
                    "name": "JWT_SECRET",
                    "value": "your-super-secret-jwt-key-change-in-production"
                },
                {
                    "name": "NODE_ENV",
                    "value": "development"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/sweetdream-sweetdream-dev-service-user-service",
                    "awslogs-region": "us-east-1",
                    "awslogs-stream-prefix": "ecs"
                }
            }
        }
    ],
    "family": "sweetdream-dev-task-user-service",
    "taskRoleArn": "arn:aws:iam::409964509537:role/sweetdream-ecs-task-role",
    "executionRoleArn": "arn:aws:iam::409964509537:role/sweetdream-ecs-execution-role",
    "networkMode": "awsvpc",
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "cpu": "512",
    "memory": "1024"
}