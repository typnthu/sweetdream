# Terraform Variables
# Copy this file to terraform.tfvars and fill in your values
# terraform.tfvars is gitignored for security

# AWS Configuration
aws_region = "us-east-1"
environment = "production"

# Database Configuration
db_name     = "sweetdream"
db_username = "postgres"
db_password = "CHANGE_ME_TO_SECURE_PASSWORD"  # Change this!

# S3 Configuration
s3_bucket_name = "sweetdream-logs-data"

# Analytics
enable_customer_analytics = true
analytics_bucket_prefix   = "sweetdream-analytics"

# Monitoring
log_retention_days = 7
alert_email        = "your-email@example.com"

# Optional Features
enable_bastion = false

# Deployment Configuration (Rolling Updates)
deployment_minimum_healthy_percent = 50
deployment_maximum_percent = 200
